extends ../layoutA.jade
block contenido
	div#imagenesD
		for imagen in imagenes
			div.img-container
				a(href="/sis/imagenes/#{imagen._id}")
					h2= imagen.title
				img.main-img(src="../estatico/imagenes/#{imagen._id}.#{imagen.extension}")
				if(typeof imagen.creator != "undefined")
					p Por #{imagen.creator.email}
	
	script(id="image-template" type="text/x-handdlebars-template")
		div(class="img-container")
			a(href="/sis/imagenes/{{id}}")
				h2 {{title}}
			img.main-img(src="../estatico/imagenes/{{id}}.{{extension}}")

	script(src="./estatico/js/client.js")