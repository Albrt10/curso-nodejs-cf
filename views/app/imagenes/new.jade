extends ./layoutSis.jade
block contenido
	div.col-md-6.remove-float.center-block.big-top-space
		h1 subir nueva imagen
		form(action="/sis/imagenes" method="POST" enctype="multipart/form-data")
			div(class="form-group")
				label(for="title") Titulo
				input(type="text", name="title", placeholder="titulo de la imagen...", id="title", class="form-control")
			div(class="form-group")
				label(for="archivo") Imagen
				input(type="file", name="archivo", id="archivo", class="form-control")
			
			div.row.top-space
				div.col-xs-12.col-sm-6
					input(type="submit", value="Subir", class="btn btn-info")