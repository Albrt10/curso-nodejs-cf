doctype html
html(lang="es")
	head
		title FotoFacilito
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js", type="text/javascript")
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js", type="text/javascript")
		link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel="stylesheet")
		link(href="estatico/css/app.css", rel="stylesheet", type="text/css")

	body
		nav.navbar.navbar-inverse(role="navigation")
			div.container-fluid
				div.navbar-header
					a.navbar-brand(href="/") 
						span.glyphicon.glyphicon-home
				ul.nav.navbar-nav
					li
						a(href="/register") Registrar
				form.navbar-form.navbar-right(action="/buscar" method="get")
					div.input-group
						input.form-control#qp(type="text" name="qp" placeholder="Buscar")
						div.input-group-btn
							button.btn.btn-default#btnBuscar(type="submit")
								i.glyphicon.glyphicon-search
		
		div.container-fluid.text-center
			div.row.content
				div.col-sm-1.sidenav
					p
						a.btn.btn-default.btn-lg(href="/buscar?qp=*&g=m")
							span.glyphicon.glyphicon-king
					p
						a.btn.btn-default.btn-lg(href="/buscar?qp=*&g=f")
							span.glyphicon.glyphicon-queen
					p
						a.btn.btn-default.btn.lg(href="/sis/imagenes")
							span.glyphicon.glyphicon-th-list(title="Mis imagenes")
					p
						a.btn.btn-success.btn-lg(href="/login")
							span.glyphicon.glyphicon-log-in(title="Iniciar session")
				div.col-sm-9.text-left
					block contenido
				div.col-sm-2.sidenav
					div.well.well-lg
						p Resumen
						hr
						block resumenCompra
		footer.container-fluid.text-center
			p Footer Text